# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/brand_tracker

# OpenRouter Configuration (Recommended for Multi-Model Access)
OPENROUTER_API_KEY=your_openrouter_api_key_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic (Claude) Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-5-sonnet-latest

# Application Configuration
NODE_ENV=development

# LLM Provider: openai | anthropic | openrouter
LLM_PROVIDER=openai

# Analysis Settings (optional)
PROMPTS_PER_TOPIC=30
ANALYSIS_FREQUENCY=daily